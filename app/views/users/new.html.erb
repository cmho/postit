<h2>Register</h2>

<%= form_for @user, :url => users_path do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :username %>
	<%= f.text_field :username %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
	<br />
	<%= f.submit :value => "Register" %>
<% end %>