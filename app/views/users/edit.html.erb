<h2>Edit Account</h2>

<%= form_for @user, :url => user_path(@user.id) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
	<br />
	<%= f.submit :value => "Update" %>
<% end %>