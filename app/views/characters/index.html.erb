<h1>Listing characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th>Subclass</th>
    <th>Race</th>
    <th>Subrace</th>
    <th>Strength</th>
    <th>Dexterity</th>
    <th>Constitution</th>
    <th>Intelligence</th>
    <th>Wisdom</th>
    <th>Charisma</th>
    <th>Background</th>
    <th>Background notes</th>
    <th>Equipment</th>
    <th>Hit points</th>
    <th>Hit dice number</th>
    <th>Hit dice type</th>
    <th>Armor class</th>
    <th>Initiative mod</th>
    <th>Melee attack mod</th>
    <th>Ranged attack mod</th>
    <th>Magical ability mod</th>
    <th>Saving throw dc</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Physical description</th>
    <th>Goals and motivations</th>
    <th>Alignment</th>
    <th>Personality</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= character.name %></td>
    <td><%= character.class %></td>
    <td><%= character.subclass %></td>
    <td><%= character.race %></td>
    <td><%= character.subrace %></td>
    <td><%= character.strength %></td>
    <td><%= character.dexterity %></td>
    <td><%= character.constitution %></td>
    <td><%= character.intelligence %></td>
    <td><%= character.wisdom %></td>
    <td><%= character.charisma %></td>
    <td><%= character.background %></td>
    <td><%= character.background_notes %></td>
    <td><%= character.equipment %></td>
    <td><%= character.hit_points %></td>
    <td><%= character.hit_dice_number %></td>
    <td><%= character.hit_dice_type %></td>
    <td><%= character.armor_class %></td>
    <td><%= character.initiative_mod %></td>
    <td><%= character.melee_attack_mod %></td>
    <td><%= character.ranged_attack_mod %></td>
    <td><%= character.magical_ability_mod %></td>
    <td><%= character.saving_throw_dc %></td>
    <td><%= character.height %></td>
    <td><%= character.weight %></td>
    <td><%= character.physical_description %></td>
    <td><%= character.goals_and_motivations %></td>
    <td><%= character.alignment %></td>
    <td><%= character.personality %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

