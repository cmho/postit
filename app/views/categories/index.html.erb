<h2>List of Categories</h2>

<table>
	<tr>
		<th>Category Name</th>
		<th>Posts</th>
		<th></th>
	</tr>
	<% @categories.each do |category| %>
	<tr>
		<td><a href="<%= category_path(category.id) %>"><%= category.name %></a></td>
		<td><%= category.posts.length %></td>
		<td><a href="<%= edit_category_path(category.id) %>">Edit</a></td>
	</tr>
	<% end %>
</table>