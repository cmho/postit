<h2><% unless @post.url.empty? %><a href="<%= @post.url %>" rel="external"><% end %><%= @post.title %><% unless @post.url.nil? %></a><% end %></h2>

<div class="post-content">
<%= @post.description %>
</div>

<div id="comments">
	<div id="comment-form">
		<h3>Post a Comment</h3>
		<%= form_for [@post, @comment], :url => post_comments_path(@post) do |f| %>
			<%= f.label :title %>
			<%= f.text_field :title %>
			<%= f.label :content %>
			<%= f.text_area :content, :rows => 10 %>
			<%= f.hidden_field :user_id, :value => 1 %>
			<br />
			<%= f.submit :value => "Post" %>
		<% end %>
	</div>
	<% @comments.each do |comment| %>
		<div class="comment-item">
			<h4><%= comment.title %></h4>
			<div class="comment-body">
				<%= comment.content %>
			</div>
			<div class="comment-meta">
				Posted by <%= comment.user.name %>
			</div>
		</div>
	<% end %>
</div>